<!-- include header -->
<% include ./partials/header %>

<div class="ui text container main">
     <div class="ui huge header"><%= blog.title%></div>
     <div class="ui top attached segment">
          <div class="item">
               <img src="<%= blog.image%>" class="ui centered rounded image">
               <div class="content">
                    <span><%= blog.created.toDateString()%></span>
               </div>
               <div class="description">
                    <p><%= blog.body %></p>
               </div>
               <a href="/blogs/<%=blog._id%>/edit" class="ui inverted blue button">Edit</a>
               <form action="/blogs/<%=blog._id%>?_method=DELETE" method="post" style="display:inline;">
                    <button class="ui inverted red button">Delete</button>
               </form>
          </div>
     </div>
</div>

<!-- include footer -->
<% include ./partials/footer %>